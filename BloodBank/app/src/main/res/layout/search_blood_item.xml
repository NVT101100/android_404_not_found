<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@drawable/search_blood_item_background"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/searchItemProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/searchItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: " />
            <TextView
                android:id="@+id/searchItemAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: " />

            <TextView
                android:id="@+id/searchItemAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adress" />

            <TextView
                android:id="@+id/searchItemBlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group: " />

            <TextView
                android:id="@+id/searchItemPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number: " />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>